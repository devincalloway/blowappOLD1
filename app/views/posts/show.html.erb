<p id="notice"><%= notice %></p>

<div id="post-content" class="span-17">
  <div class="post_title">
  <h1><%= @post.title %></h1>
  </div>
 <div class="post_body">
    <p>By <%= @post.user.name %>
    on <%= @post.created_at.strftime("%B %d, %Y") %>
 </p>
    <p>
      <%= @post.body %>
    </p>
  </div>
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
